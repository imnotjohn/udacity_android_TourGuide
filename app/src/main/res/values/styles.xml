<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bg">
        <item name="android:background">@drawable/aloha_hdpi</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="bg_hikes">
        <item name="android:background">@drawable/hlr_hdpi</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="bg_islands">
        <item name="android:background">@drawable/islands_hdpi</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="bg_beaches">
        <item name="android:background">@drawable/beaches_hdpi</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="list_item_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="list_img_item_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="list_img_kanikapila">
        <item name="android:src">@drawable/kanikapila_hdpi</item>
    </style>

    <style name="list_img_acai">
        <item name="android:src">@drawable/acai_hdpi</item>
    </style>

    <style name="list_img_manapua">
        <item name="android:src">@drawable/manapua_hdpi</item>
    </style>

    <style name="list_item_toDoName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">10</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="list_item_contentValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleX">0.6</item>
        <item name="android:scaleY">0.6</item>
    </style>

    <style name="navStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">25dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">#FFFFFF</item>
    </style>
</resources>
